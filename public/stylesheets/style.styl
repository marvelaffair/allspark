@import 'nib'

global-reset()

@css{
  *, *:before, *:after {
    -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;
  }
}


@keyframes fadeInOut
  0%
    opacity 0
  25%
    opacity 1
  75%
    opacity 1
  100%
    opacity 0


html, body
  margin 0
  padding 0
  height 100%
  min-height 100%
  background black

section.center
  height 100%
  font-size 0
  text-align center
  perspective 800px
  perspective-origin 50% 50%
  .results
    position absolute
    left 0
    right 0
    bottom 10rem
    text-align center
    font-size 2rem
    color white
    opacity 0.9
    font-family 'Helvetica Neue', Helvetica, sans-serif
    font-weight 100
  &::before
    content ''
    display inline-block
    width 0
    height 100%
    vertical-align middle
  & > form
    position relative
    display inline-block
    vertical-align middle
    font-size 1rem
    margin 0 auto
    width 100%
    text-align center
    color rgba(120,170,250, 1)
    max-width 500px
    text-align left
    padding 2rem
    font-family 'Helvetica Neue', Helvetica, sans-serif
    font-weight 200
    .hints
      position absolute
      font-family 'Helvetica Neue', Helvetica, sans-serif
      font-weight 200
      top 0
      left 0
      right 0
      width auto
      height 2rem
      text-align center
      span
        position absolute
        top 0
        left 0
        right 0
        text-align center
        font-weight 200
        color rgba(120,170,250, 0.75)
        font-size 1.3rem
        opacity 0
        animation-name fadeInOut
        animation-duration 4s
        &:nth-child(1)
          animation-delay 0
        &:nth-child(2)
          animation-delay 4s
        &:nth-child(3)
          animation-delay 8s
        &:nth-child(4)
          animation-delay 12s
        &:nth-child(5)
          animation-delay 16s
    input[type='text']
      border 1px solid rgba(120,170,250, 0.75)
      appearance none
      background transparent
      color rgba(120,170,250, 0.75)
      width 100%
      height 3rem
      padding 0 0.5rem
      &:focus
        border 1px solid rgba(120,170,250, 1)
        color rgba(120,170,250, 1)
    input[type='submit']
      height 3rem
      border 0
      appearance none
      background rgba(120,170,250, 1)
      padding 0 2rem
      position relative
      left -2px
  & > div
    display inline-block
    vertical-align middle
    font-size 1rem
    margin 0 auto
    width 100%
    text-align center
    //transform rotateX(-30deg)//rotate(45deg)
    transform-style: preserve-3d;
    .logo
      display inline-block
      width 25%
      padding-bottom 25%
      //border 2px solid rgba(120,170,250, 0.8)
      //box-shadow 0 0 2px rgba(120,170,250, 0.8)
      transition 0.5s ease
      transform-style: preserve-3d;
      transform scale(0.45) rotateX(-20deg)//rotate(45deg)
      position relative
      background rgba(255,255,255,0.4)
      .bottom, .left, .right, .top
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        //border 2px solid rgba(120,170,250, 0.8)
        //box-shadow 0 0 2px rgba(120,170,250, 0.8)
        transform-style: preserve-3d;
        background-image url('/img/cubeface.png')
        opacity 0.75
      .top
        transform-origin 50% 0
        transform rotateX(90deg)
        .front
          position absolute
          top 0
          left 0
          width 100%
          height 100%
          //border 2px solid rgba(120,170,250, 0.8)
          //box-shadow 0 0 2px rgba(120,170,250, 0.8)
          transform-origin 50% 100%
          transform rotateX(90deg)
          background-image url('/img/cubeface.png')
          opacity 0.95s
      .bottom
        transform-origin 50% 100%
        transform rotateX(-90deg)
      .left
        transform-origin 0% 50%
        transform rotateY(-90deg)
      .right
        transform-origin 100% 50%
        transform rotateY(90deg)
      @media screen and (max-width: 56rem)
        width 40%
        padding-bottom 40%
      &:hover
        transform scale(0.45) translateX(-35%) translateY(35%) rotateX(40deg) rotateY(40deg)
    h1
      color rgba(120,170,250, 1)
      margin 1rem
      font-size 2rem
      font-family 'Helvetica Neue', Helvetica, sans-serif
      font-weight 100
    img
      opacity 0.6
      transition 0.5s ease
      &:hover
        opacity 1

