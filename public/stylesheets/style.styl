@import 'nib'

global-reset()

@css{
  *, *:before, *:after {
    -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;
  }
}

html, body
  margin 0
  padding 0
  height 100%
  min-height 100%
  background black

section.center
  height 100%
  font-size 0
  text-align center
  &::before
    content ''
    display inline-block
    width 0
    height 100%
    vertical-align middle
  & > form
    display inline-block
    vertical-align middle
    font-size 1rem
    margin 0 auto
    width 100%
    text-align center
    color rgba(120,170,250, 1)
    max-width 500px
    text-align left
    padding 2rem
    font-family 'Helvetica Neue', Helvetica, sans-serif
    font-weight 200
    input[type='text']
      border 1px solid rgba(120,170,250, 0.75)
      appearance none
      background transparent
      color rgba(120,170,250, 0.75)
      width 100%
      height 3rem
      padding 0 0.5rem
      &:focus
        border 1px solid rgba(120,170,250, 1)
        color rgba(120,170,250, 1)
    input[type='submit']
      height 3rem
      border 0
      appearance none
      background rgba(120,170,250, 1)
      padding 0 2rem
      position relative
      left -2px
  & > div
    display inline-block
    vertical-align middle
    font-size 1rem
    margin 0 auto
    width 100%
    text-align center
    .logo
      display inline-block
      width 25%
      padding-bottom 25%
      border 2px solid rgba(120,170,250, 0.8)
      box-shadow 0 0 2px rgba(120,170,250, 0.8)
      transition 0.5s ease
      transform scale(0.55) rotate(45deg)
      @media screen and (max-width: 56rem)
        width 40%
        padding-bottom 40%
      &:hover
        transform scale(0.65) rotate(40deg)
    h1
      color rgba(120,170,250, 1)
      margin 1rem
      font-size 2rem
      font-family 'Helvetica Neue', Helvetica, sans-serif
      font-weight 100
    img
      opacity 0.6
      transition 0.5s ease
      &:hover
        opacity 1

